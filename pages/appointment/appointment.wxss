/* pages/appointment/appointment.wxss */
page{
  width:100%;
  background:#eeeeee;
}
.container{
  width:100%;
  height:100%;
  background:#eeeeee;
  margin:0;
  padding:0;
  font-size:28rpx;
}
.doctor-info,.pay-info{
  width:100%;
  background:#ffffff;
  margin-bottom: 20rpx;
  overflow: hidden;
  vertical-align: middle;
}
.doctor-info{
  padding: 20px 0;
}
.pay-info{
  padding: 20px;
}
.doctor-info .doctor-info-l{
  width: 30%;
  display: inline-block;
  vertical-align: middle;
}
.doctor-info .doctor-info-r{
   width: 70%;
   display: inline-block;
   vertical-align: middle;
}
.portrait{
  width:180rpx;
  height:180rpx;
  border-radius: 5rpx;
  margin: 0 auto;
  display: block;
}
.name_doctor{
  overflow:hidden;
  vertical-align: bottom;
  text-align: left;
  margin-bottom: 5px;
}
.name{
  font-family: PingFang-SC-Regular;
	font-size: 34rpx;
	font-stretch: normal;
	letter-spacing: 1rpx;
	color: #333333;
  display: inline-block;
  margin-right: 4px;
  vertical-align: bottom;
  font-weight: 700;
}
.doctor{
  font-size: 26rpx;
  color: #4497f7;
  display: inline-block;
  vertical-align: bottom;
}
.gray{
  color:#999999;
  font-size: 24rpx;
  overflow: hidden;
  text-align: left;
}
.left{
  display: inline-block;
  margin-right: 20px;
}
.right{
  display: inline-block;
}
.gray1{
  color:#4497f7;
  font-size: 24rpx;
  margin-bottom: 5px;
}
.address{
  font-size: 24rpx;
  vertical-align: middle;
}
.icon{
  width:30rpx;
  height:38rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 4px;
}
.icon-text{
  display: inline-block;
  vertical-align: middle;
}
.consultation_time{
  overflow: hidden;
}
.consultation{
  overflow: hidden;
  padding-left: 20px;
}
.gray2{
  display: inline-block;
  font-size:28rpx;
  color:#646464;
  font-weight: 700;
}
.blue{
  display: inline-block;
  font-size:28rpx;
  color:#333333;
  font-weight: 700;
}
.time{
  overflow: hidden;
  float:left;
  margin-left:20rpx;
}
.btn{
  width:200rpx;
  line-height:80rpx;
  background: #4497f7;
	border-radius: 5px;
  color:#ffffff;
  font-size:28rpx;
  margin:147rpx auto;
}
